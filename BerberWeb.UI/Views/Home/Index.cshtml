@model MainPageViewModel


@{
    Layout = "~/Views/Shared/_UILayout.cshtml";
}


<div class="page-content">
    <div id="content">
        <header>
            <div class="cover bg-light">
                <div class="container px-3">
                    <div class="row">
                        <div class="col-lg-6 p-2"><img class="img-fluid" src="~/Template/images/illustrations/hello4.svg" alt="hello" /></div>
                        <div class="col-lg-6">
                            <div class="mt-5">
                                <p class="lead text-uppercase mb-1">Merhaba</p>
                                <h1 class="intro-title marker" data-aos="fade-left" data-aos-delay="50">Alınabilcek en iyi hizmeti deneyimlemeye hoşgeldiniz.</h1>

                                <div class="mt-3" data-aos="fade-up" data-aos-delay="200"><a class="btn btn-primary shadow-sm mt-1 hover-effect" href="#contact">İletişime Geç <i class="fas fa-arrow-right"></i></a></div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
            <div class="wave-bg"></div>
        </header>
        <div class="section pt-4 px-3 px-lg-4" id="about">
            <div class="container-narrow">
                <div class="row">
                    <div class="col-md-6">
                        <h2 class="h4 my-2">@Model.About.Title</h2>
                        <p>@Model.About.Description</p>

                    </div>
                    <div class="col-md-5 offset-md-1" data-aos="fade-left" data-aos-delay="100"><img class="avatar img-fluid mt-2" src="~/Template/images/berberfoto.jpg" width="400" height="400" alt="Walter Patterson" /></div>
                </div>
            </div>
        </div>



        <div class="section px-2 px-lg-4 pt-5" id="portfolio">
            <div class="container">
                <div class="text-center mb-5">
                    <h2 class="marker marker-center">Hizmetlerimiz </h2>
                </div>
                <div class="grid bp-gallery pb-3" data-aos="zoom-in-up" data-aos-delay="100">
                    <div class="grid-sizer"></div>
                    <div class="grid-item">
                        <a href="https://dribbble.com">
                            <figure class="portfolio-item">
                                <img src="~/Template/images/portfolio/sackesim.jpg" style="width: 350px; height: 230px;" />
                                <figcaption>
                                    <h4 class="h5 mb-0">Saç Kesimi</h4>
                                </figcaption>
                            </figure>
                        </a>
                    </div>
                    <div class="grid-item">
                        <a href="https://dribbble.com">
                            <figure class="portfolio-item">
                                <img src="~/Template/images/portfolio/sacboyama.jpg" style="width: 350px; height: 230px;" />
                                <figcaption>
                                    <h4 class="h5 mb-0">Saç Boyama</h4>
                                </figcaption>
                            </figure>
                        </a>
                    </div>
                    <div class="grid-item">
                        <a href="https://dribbble.com">
                            <figure class="portfolio-item">
                                <img src="~/Template/images/portfolio/sakalkesim.jpg" style="width: 350px; height: 230px;" />
                                <figcaption>
                                    <h4 class="h5 mb-0">Sakal ve Bıyık Kesimi</h4>
                                </figcaption>
                            </figure>
                        </a>
                    </div>
                    <div class="grid-item">
                        <a href="https://dribbble.com">
                            <figure class="portfolio-item">
                                <img src="~/Template/images/portfolio/fon.jpg" style="width: 350px; height: 230px;" />
                                <figcaption>
                                    <h4 class="h5 mb-0">Fön İşlemi</h4>
                                </figcaption>
                            </figure>
                        </a>
                    </div>
                    <div class="grid-item">
                        <a href="https://dribbble.com">
                            <figure class="portfolio-item">
                                <img src="~/Template/images/portfolio/masaj.jpg" style="width: 350px; height: 230px;" />
                                <figcaption>
                                    <h4 class="h5 mb-0">Masaj</h4>
                                </figcaption>
                            </figure>
                        </a>
                    </div>
                    <div class="grid-item">
                        <a href="https://dribbble.com">
                            <figure class="portfolio-item">
                                <img src="~/Template/images/portfolio/yikama.jpg" style="width: 350px; height: 230px;" />
                                <figcaption>
                                    <h4 class="h5 mb-0">Saç Yıkama</h4>
                                </figcaption>
                            </figure>
                        </a>
                    </div>
                    <div class="grid-item">
                        <a href="https://dribbble.com">
                            <figure class="portfolio-item">
                                <img src="~/Template/images/portfolio/ybakim.jpg" style="width: 350px; height: 230px;" />
                                <figcaption>
                                    <h4 class="h5 mb-0">Yüz Bakımı</h4>
                                </figcaption>
                            </figure>
                        </a>
                    </div>
                    <div class="grid-item">
                        <a href="https://dribbble.com">
                            <figure class="portfolio-item">
                                <img src="~/Template/images/portfolio/lazer.jpg" style="width: 350px; height: 230px;" />
                                <figcaption>
                                    <h4 class="h5 mb-0">Lazer Epilasyon</h4>
                                </figcaption>
                            </figure>
                        </a>
                    </div>
                </div>
            </div>
        </div>

        <div class="section px-2 px-lg-4 pb-4 pt-5 mb-5" id="contact">
            <div class="container-narrow">
                <div class="text-center mb-5">
                    <h2 class="marker marker-center">İletişim</h2>
                </div>
                <div class="row">
                    <div class="col-md-6" data-aos="zoom-in" data-aos-delay="100">
                        <img class="img-fluid" src="~/Template/images/illustrations/hello4.svg" alt="hello" />
                    </div>
                    <div class="col-md-6" data-aos="fade-left" data-aos-delay="300">
                        <div class="mt-3 px-1">
                            <div class="h5">Nasıl yardımcı olabiliriz?</div>
                            <p>@Model.Contact.Description</p>
                        </div>
                        <div class="mt-53 px-1">
                            <div class="row">
                                <div class="col-sm-2">
                                    <div class="pb-1">Email:</div>
                                </div>
                                <div class="col-sm-10">
                                    <div class="pb-1 fw-bolder">@Model.Contact.Email</div>
                                </div>


                                <div class="col-sm-2">
                                    <div class="pb-1">Phone:</div>
                                </div>
                                <div class="col-sm-10">
                                    <div class="pb-1 fw-bolder">@Model.Contact.PhoneNumber</div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
        <footer class="pt-4 pb-4 text-center bg-light">
            <div class="container">
                <div class="my-3">
                    <div class="h4">Sosyal Medya Hesaplarımız</div>
                    <p>Bizi Takip Etmeyi Unutma</p>
                    <div class="social-nav">
                        <nav role="navigation">
                            <ul class="nav justify-content-center">
                                <li class="nav-item"><a class="nav-link" href="https://twitter.com/templateflip" title="Twitter"><i class="fab fa-twitter"></i><span class="menu-title sr-only">Twitter</span></a></li>
                                <li class="nav-item"><a class="nav-link" href="https://www.facebook.com/templateflip" title="Facebook"><i class="fab fa-facebook"></i><span class="menu-title sr-only">Facebook</span></a></li>
                                <li class="nav-item"><a class="nav-link" href="https://www.instagram.com/templateflip" title="Instagram"><i class="fab fa-instagram"></i><span class="menu-title sr-only">Instagram</span></a></li>

                            </ul>
                        </nav>
                    </div>
                </div>

            </div>
        </footer>
    </div>
</div>