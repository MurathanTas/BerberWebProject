        }

        @if (User.IsInRole("Admin"))
        {
            <a href="/AdminContact/Index">İletişim</a>
        }

        @if (User.IsInRole("Admin"))
        {
            <a href="/AdminPersonelRegister/Index">Personel Kayıt</a>
        }
        @if (User.IsInRole("Admin"))
        {
            <a href="/PersonelMusaitliks/Index">Personel Çalışma Saatleri</a>
        }

        @if (User.IsInRole("Admin"))
        {
            <a href="/AdminService/Index">Hizmetler</a>
        }



        @if (User.IsInRole("Admin"))
        {
            <a href="/Randevu/Randevular">Randevular</a>
