@model IEnumerable<BerberWeb.Entity.Entities.Personel>

@{
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<table class="table">
    <thead>
        <tr>
            <th scope="col">Kullanıcı Adı</th>
            <th scope="col">Ad</th>
            <th scope="col">Soyad</th>
            <th scope="col">E-posta</th>
            <th scope="col">İşlemler</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var user in Model)
        {
            <tr>
                <td>@user.AppUser.UserName</td>
                <td>@user.AppUser.FirstName</td>
                <td>@user.AppUser.LastName</td>
                <td>@user.AppUser.Email</td>
                <td>
                    <form asp-action="DeletePersonel" method="post" style="display:inline;">
                        <input type="hidden" name="id" value="@user.PersonelId" />
                        <button type="submit" class="btn btn-danger" onclick="return confirm('Bu personeli silmek istediğinize emin misiniz?');">Sil</button>
                    </form>
                </td>
            </tr>
        }
    </tbody>
</table>

<div class="text-left">
    <a asp-controller="AdminPersonelRegister" asp-action="CreatePersonnel" class="btn btn-success">Yeni Personel Ekle</a>
</div>