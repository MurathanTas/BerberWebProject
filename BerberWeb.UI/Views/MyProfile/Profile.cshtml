@model BerberWeb.Entity.Entities.AppUser

<div class="container mt-5">
    @if (TempData["WelcomeMessage"] != null)
    {
        <div id="welcomeMessage" class="alert alert-success text-center">
            @TempData["WelcomeMessage"]
        </div>
    }

    <div class="d-flex justify-content-center">
        <div class="card shadow-lg" style="max-width: 400px; width: 100%;">
            <div class="card-header text-center bg-primary text-white">
                <h4>Kullanıcı Profil</h4>
            </div>
            <div class="card-body text-center">
                <img src="~/Template/images/berberfoto.jpg"
                     alt="User Avatar"
                     class="rounded-circle mb-3 shadow-sm"
                     style="width: 80px; height: 80px; object-fit: cover;" />
                <h5 class="card-title">@Model.FirstName @Model.LastName</h5>
                <p class="text-muted">@Model.Email</p>
                <hr />
                <div class="d-grid gap-2">
                    <a asp-action="EditProfile" asp-controller="MyProfile" class="btn btn-outline-primary">Profili Düzenle</a>
                    <a asp-action="Logout" asp-controller="Login" class="btn btn-outline-danger">Çıkış Yap</a>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <script>
        // Hoş geldiniz mesajını 3 saniye sonra gizle
        setTimeout(function () {
            var welcomeMessage = document.getElementById('welcomeMessage');
            if (welcomeMessage) {
                welcomeMessage.style.display = 'none';
            }
        }, 3000); // 3000ms = 3 saniye
    </script>
}
