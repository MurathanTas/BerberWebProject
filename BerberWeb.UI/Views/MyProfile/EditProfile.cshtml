@model BerberWeb.UI.Models.EditProfileViewModel

<div class="container mt-5">
    <h2 class="text-center">Profil Düzenle</h2>
    <hr />

    @if (TempData["SuccessMessage"] != null)
    {
        <div class="alert alert-success text-center">
            @TempData["SuccessMessage"]
        </div>
    }

    <form asp-action="EditProfile" method="post" class="mt-4">
        <div class="form-group mb-3">
            <label asp-for="FirstName" class="form-label">Ad</label>
            <input asp-for="FirstName" class="form-control" />
            <span asp-validation-for="FirstName" class="text-danger"></span>
        </div>

        <div class="form-group mb-3">
            <label asp-for="LastName" class="form-label">Soyad</label>
            <input asp-for="LastName" class="form-control" />
            <span asp-validation-for="LastName" class="text-danger"></span>
        </div>

        <div class="form-group mb-3">
            <label asp-for="Email" class="form-label">E-posta</label>
            <input asp-for="Email" class="form-control" type="email" />
            <span asp-validation-for="Email" class="text-danger"></span>
        </div>

        <button type="submit" class="btn btn-primary w-100">Kaydet</button>
        <a asp-action="Profile" class="btn btn-secondary w-100 mt-2">Geri Dön</a>
    </form>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
