@{
    Layout = "~/Views/Shared/_Layout.cshtml";
}
@model IEnumerable<BerberWeb.Entity.Entities.Service>

<h1>Hizmetler</h1>
<br />

<table class="table table-striped table-hover table-bordered align-middle">
    <thead class="table-light">
        <tr>
            <th scope="col">#</th>
            <th scope="col">Hizmet</th>
            <th scope="col">Fiyat</th>
            <th scope="col">Süre</th>
            <th scope="col" class="sort" data-sort="completion">Personel</th>
            <th scope="col">Sil</th>
            <th scope="col" class="sort" data-sort="completion">Düzenle</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var service in Model)
        {
            <tr>
                <th scope="row">@service.Id</th>
                <td>@service.ServiceName</td>
                <td>@service.Price TL</td>
                <td>@service.Duration </td>
                <td>
                    <a asp-controller="ServicePersonel" asp-action="Index" asp-route-serviceId="@service.Id" class="btn btn-warning">
                        Personel Ata
                    </a>
                </td>
                <td><a href="/AdminService/DeleteService/@service.Id" class="btn btn-danger">Sil</a></td>
                <td><a href="/AdminService/EditService/@service.Id" class="btn btn-success">Güncelle</a></td>
            </tr>
        }
    </tbody>
</table>


<div class="text-left">
    <a asp-controller="AdminService" asp-action="AddService" class="btn btn-success">Yeni Hizmet Ekle</a>
</div>